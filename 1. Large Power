    "def large_power(base, exponent):\n",
    "  if base ** exponent > 5000:\n",
    "    return True\n",
    "  else:\n",
    "    return False\n",
    "\n",
    "print(large_power(2, 13))\n",
    "\n",
    "print(large_power(2, 12))"
